<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".PatientEntryActivity">

    <!-- Top Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <Button
            android:id="@+id/f_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:backgroundTint="#0000FF"
            android:text="Back" />

        <!-- Logo Placeholder -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cnrgi_logo" />

        <!-- ID Field -->
        <EditText
            android:id="@+id/id_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:hint="ID" />
    </RelativeLayout>

    <!-- Middle Section (Input Fields) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- Paramedic Name Label -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paramedic Name"
            android:textSize="16sp" />

        <!-- Doctor ID Input -->
        <EditText
            android:id="@+id/doctor_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Doctor ID"
            android:textColorHint="#0000FF" />

        <!-- Mobile Number Input -->
        <EditText
            android:id="@+id/mobile_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Mobile Number"
            android:textColorHint="#0000FF" />

        <!-- Order ID Input -->
        <EditText
            android:id="@+id/order_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Order ID"
            android:textColorHint="#0000FF" />

        <!-- Search Button -->
        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:backgroundTint="#0000FF"
            android:text="Search" />
    </LinearLayout>

    <!-- Enter Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Name of Doctor Input -->
        <EditText
            android:id="@+id/name_of_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"
            android:hint="Name of Doctor" />

        <!-- Specialty Input -->
        <EditText
            android:id="@+id/specialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"
            android:hint="Specialty" />

        <!-- Mobile Number Input -->
        <EditText
            android:id="@+id/doctor_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3"
            android:hint="Mobile Number" />

        <!-- Create Link and Existing Link Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/create_link_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:backgroundTint="#0000FF"
                android:text="Create Link" />

            <Button
                android:id="@+id/existing_link_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffff"
                android:backgroundTint="#0000FF"
                android:text="Existing Link" />
        </LinearLayout>
    </LinearLayout>

    <!-- Link Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Doctor Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Doctor Link" />

            <ImageButton
                android:id="@+id/copy_doctor_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_file_copy_24"
                android:contentDescription="Copy Doctor Link" />
        </LinearLayout>

        <!-- Caretaker Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/caretaker_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Caretaker Link" />

            <ImageButton
                android:id="@+id/copy_caretaker_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_file_copy_24"                android:contentDescription="Copy Caretaker Link" />
        </LinearLayout>

        <!-- Paramedic Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paramedic_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Paramedic Link" />

            <ImageButton
                android:id="@+id/copy_paramedic_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_file_copy_24"                android:contentDescription="Copy Paramedic Link" />
        </LinearLayout>
    </LinearLayout>

    <!-- Connect Button -->
    <Button
        android:id="@+id/connect_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#ffff"
        android:backgroundTint="#0000FF"
        android:text="Connect" />
</LinearLayout>