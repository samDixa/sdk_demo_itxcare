<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Offline Session"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textColor="#212121" />

    <EditText
        android:id="@+id/et_session_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Session Name"
        android:textSize="16sp"
        android:padding="12dp"
        android:backgroundTint="#E0E0E0"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/et_patient_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Patient Name"
        android:textSize="16sp"
        android:padding="12dp"
        android:backgroundTint="#E0E0E0"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/et_location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location Name"
        android:textSize="16sp"
        android:padding="12dp"
        android:backgroundTint="#E0E0E0"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/et_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Date (e.g., 2025-05-26)"
        android:textSize="16sp"
        android:padding="12dp"
        android:backgroundTint="#E0E0E0"
        android:layout_marginBottom="12dp"
        android:focusable="false"
        android:clickable="true" />

    <Spinner
        android:id="@+id/spinner_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#E0E0E0"
        android:padding="12dp" />

    <Button
        android:id="@+id/btn_enter_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:textSize="16sp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

</LinearLayout>