<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/lgw_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_button"
            android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="  Back"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:src="@drawable/login_illustration" />

        <!-- Right Side - Login Box -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_box_background"
                android:elevation="4dp"
                android:orientation="vertical"
                android:paddingLeft="70dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:paddingRight="70dp">

                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:text="Enter your Credentials to get access to your account"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edit_userid"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edit_text_background"
                    android:drawableStart="@drawable/ic_user"
                    android:hint="  Paramedic / User Id"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/edit_text_background"
                    android:drawableStart="@drawable/ic_lock"
                    android:hint="  Enter Password"
                    android:inputType="textPassword"
                    android:paddingStart="10dp" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/blue_button"
                    android:text="Login"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/sm_cnrg_logo" />

        <View
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lgw_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:layout_marginRight="40dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/lgw_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:layout_marginRight="40dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/lgw_bettry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”‹"
                android:textColor="#000000"
                android:textSize="16sp"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
