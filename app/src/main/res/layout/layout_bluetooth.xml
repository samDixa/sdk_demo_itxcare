<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <Button
              android:layout_below="@+id/llbttitle"
              android:layout_width="65dp"
              android:layout_height="20sp"
              android:padding="2dp"
              android:layout_centerHorizontal="true"
              android:textAllCaps="false"
              android:id="@+id/btnBtCtr"
              android:onClick="onClick"
              android:textSize="8sp"
              android:textStyle="bold"
              android:textColor="@color/text_color_inverse"
              android:background="@drawable/border_box"
              android:text="@string/search_devices"/>

          <TextView
              android:id="@+id/tvbtinfo"
              android:textSize="12sp"
              android:layout_below="@id/btnBtCtr"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:textColor="@color/text_color_inverse"
              android:text=""
              />
      </LinearLayout>


<!--      <include layout="@layout/layout_about"/>-->


      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:orientation="horizontal">

          <Button
              android:layout_width="55dp"
              android:layout_height="wrap_content"
              android:onClick="onClick"
              android:text="StartB"
              android:textColor="#FFFFFF"
              android:textSize="10sp"
              android:layout_marginRight="20dp"
              android:background="@drawable/border_box"
              android:id="@+id/btnNIBPStart"/>

          <Button
              android:layout_width="55dp"
              android:layout_height="wrap_content"
              android:onClick="onClick"
              android:text="Stop"
              android:textColor="#FFFFFF"
              android:textSize="10sp"
              android:background="@drawable/border_box"
              android:id="@+id/btnNIBPStop"/>

          <Button
              android:layout_marginLeft="50dp"
              android:id="@+id/btnGenerateReport"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Generate Report"
              android:textColor="#FFFFFF"
              android:textSize="10sp"
              android:background="@drawable/border_box"/>

      </LinearLayout>

  </LinearLayout>

</LinearLayout>