<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/top_back_button"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:drawableLeft="@drawable/ic_baseline_keyboard_backspace_24"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_outline01"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Back" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_outline03"
                android:text=" LogOut"
                android:padding="8dp"
                android:drawableLeft="@drawable/logout"
                android:textColor="#ffff"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Paramedic Name and Logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/pramedic_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Paramedic Name"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:contentDescription="@string/app_logo"
                android:src="@drawable/cnrgi_logo" />

            <TextView
                android:id="@+id/permedic_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ID:........"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="right"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Middle Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/my_appointments"
                        android:layout_width="250px"
                        android:padding="8dp"
                        android:layout_height="100px"
                        android:layout_marginBottom="30dp"
                        android:drawableRight="@drawable/ic_baseline_event_note_24"
                        android:background="@drawable/blue_button"
                        android:text="My Appoinment"
                        android:textColor="#ffff"
                        android:layout_marginRight="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/offline_button"
                        android:layout_width="250px"
                        android:padding="8dp"
                        android:layout_height="100px"
                        android:layout_marginBottom="30dp"
                        android:drawableRight="@drawable/ic_baseline_assessment_24"
                        android:background="@drawable/gray_button"
                        android:text="Offline Sessions "
                        android:textColor="#ffff"
                        android:layout_marginRight="20dp"
                        android:textStyle="bold"  />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/new_appoinments"
                        android:layout_width="250px"
                        android:padding="8dp"
                        android:layout_height="100px"
                        android:layout_marginBottom="30dp"
                        android:drawableRight="@drawable/ic_baseline_fiber_new_24"
                        android:background="@drawable/blue_button"
                        android:text="New Appoinment "
                        android:textColor="#ffff"
                        android:layout_marginRight="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ambulance_mode"
                        android:layout_width="250px"
                        android:padding="8dp"
                        android:layout_height="100px"
                        android:layout_marginBottom="30dp"
                        android:drawableRight="@drawable/ambulance"
                        android:background="@drawable/red_button"
                        android:text="Ambulance"
                        android:textColor="#ffff"
                        android:layout_marginRight="20dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/patient_monitor"
                        android:layout_width="250px"
                        android:padding="8dp"
                        android:layout_height="100px"
                        android:layout_marginBottom="30dp"
                        android:drawableRight="@drawable/vital_monitor"
                        android:background="@drawable/green_button"
                        android:text="Patient Monitor "
                        android:textColor="#ffff"
                        android:layout_marginRight="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/myfiles_storage"
                        android:layout_width="250px"
                        android:padding="8dp"
                        android:layout_height="100px"
                        android:layout_marginBottom="30dp"
                        android:drawableRight="@drawable/my_files"
                        android:background="@drawable/gray_button"
                        android:text="My Files / Storage"
                        android:textColor="#ffff"
                        android:layout_marginRight="20dp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:elevation="8dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:layout_marginRight="10dp"
                        android:text="USB Cam"
                        android:textSize="18sp" />


                    <ImageView
                        android:id="@+id/inCam_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:elevation="8dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Keyboard"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/keyboard_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:elevation="8dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Web Cam "
                        android:textSize="18sp" />


                    <ImageView
                        android:id="@+id/usbCam_view"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:elevation="8dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/othresButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Temp 2"
                        android:textSize="18sp" />


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:elevation="8dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/stetho_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Stetho"
                        android:textSize="18sp" />


                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_background" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp"> <!-- Increased marginBottom for more lift -->

            <!-- ECG -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ECG"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/ecg_indicator"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/green_wave" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- BP -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BP"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/nibp_indicator"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:background="#FB0000" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Temp2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temp 2"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/temp_indicator"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/green_wave" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- SPO2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPO2"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/spo2_indicator"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/green_wave" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageStyle"
                    android:contentDescription="Profile Picture" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>