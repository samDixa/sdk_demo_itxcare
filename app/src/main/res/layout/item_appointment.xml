<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="#DDDDDD">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/scheduled_appointments_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Main GridLayout with 2 Columns -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginBottom="8dp">

        <!-- Left Column: Inner GridLayout for Details -->
        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:columnCount="2"
            android:padding="16dp">

            <!-- Patient Name Row -->
            <TextView
                android:id="@+id/patient_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Patient Name:"
                android:textStyle="bold"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/patient_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textColor="#000000"
                android:text="Patient Name" />

            <!-- Paramedic Name Row -->
            <TextView
                android:id="@+id/paramedic_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Paramedic:"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/paramedic_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textColor="#000000"
                android:text="Paramedic Name"
                android:layout_marginTop="8dp" />

            <!-- Doctor Name Row -->
            <TextView
                android:id="@+id/doctor_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Doctor:"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textColor="#000000"
                android:text="Doctor Name"
                android:layout_marginTop="8dp" />

            <!-- Appointment Date Row -->
            <TextView
                android:id="@+id/appointment_date_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Date:"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/appointment_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textColor="#000000"
                android:text="Date"
                android:layout_marginTop="8dp" />

            <!-- Appointment Time Row -->
            <TextView
                android:id="@+id/appointment_time_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Time:"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/appointment_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textColor="#000000"
                android:text="Time"
                android:layout_marginTop="8dp" />

            <!-- Appointment Status Row -->
            <TextView
                android:id="@+id/appointment_status_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Status:"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/appointment_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textColor="#FF9800"
                android:text="Status"
                android:layout_marginTop="8dp" />

            <!-- Booked On Row -->
            <TextView
                android:id="@+id/booked_on_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Booked On:"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/booked_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:textColor="#000000"
                android:text="Booking Date"
                android:layout_marginTop="8dp" />
        </GridLayout>

        <!-- Right Column: Profile Picture -->
        <ImageView
            android:id="@+id/patient_profile_picture"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_patient"
            android:layout_margin="8dp"
            android:padding="8dp"/>
    </GridLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/button_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="DETAILS"
            android:textAllCaps="true"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:textAllCaps="true"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
